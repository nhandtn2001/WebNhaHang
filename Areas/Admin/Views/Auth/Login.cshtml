@model LAgardenCNPM.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Đăng nhập hệ thống</title>
    <style>
        .swapper {
            max-width: 600px;
            min-height: 30px;
            border: 1px solid gray;
            padding: 15px;
            border-radius: 10px;
            margin: auto;
        }
        .boderText{
            width:300px;
        }
    </style>
</head>
<body>
    <div class="swapper mt-md-5">
        <h3 class="text-center text-danger">ĐĂNG NHẬP HỆ THỐNG</h3>
        <div class="row">
            <div class="col-md-4">
                <img src="~/Public/Img/chia-khoa-truyen-thong.png" sstyle="object-fit: contain"/>
            </div>
            @using (Html.BeginForm("loginAdmin", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <div class="col-md-8">
                <div class="form-group">
                    <label><strong>Tên đăng nhập (*)</strong></label>
                    
                    @Html.TextBoxFor(model=>model.UserName, new {@class = "form-control boderText", @placeholder = "Tên đăng nhập hoặc Email",@autofocus="autoforcus" })
                </div>
                <div class="form-group">
                    <label><strong>Mật khẩu (*)</strong></label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control boderText", @placeholder = "Mật khẩu", @autofocus = "autoforcus" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">ĐĂNG NHẬP</button>
                </div> 
                <div class="form-group">
                    <p>(*) Thông tin bắt buộc phải nhập</p>
                    @Html.ValidationSummary(false,"","error")
                </div>
            </div>
            }
        </div>
    </div>
</body>
</html>
