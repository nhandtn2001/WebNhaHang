@model MyClass.Model.CTMONAN

@{
    ViewBag.Title = "Món ăn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section headcss{
    <link href="~/Areas/Admin/Public/MyCSS/KhungHinhCSS.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/MyCSS/CangiuaCss.css" rel="stylesheet" />
}

<h2>Món ăn</h2>
<div class="mypadding-admin">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chỉnh sửa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDMA)
        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">ID Danh Mục: </div>@Html.TextBoxFor(model => model.DanhMucID, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.DanhMucID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Tên Món Ăn: </div>@Html.TextBoxFor(model => model.TenMonAn, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.TenMonAn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Số Lượng: </div>@Html.TextBoxFor(model => model.SoLuong, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Chi Tiết Món Ăn: </div>@Html.TextBoxFor(model => model.ChiTietMA, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.ChiTietMA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Giá: </div>@Html.TextBoxFor(model => model.Gia, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Khuyến Mãi: </div>@Html.TextBoxFor(model => model.GiaSale, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.GiaSale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Hình Ảnh: </div>@Html.TextBoxFor(model => model.ImgMA, new { @class = "form-control my-background boderText", @id = "txtImage" })
                <button type="button" class="btn btn-primary my-button-width my-margin-left my-padding-khung" id="btnSelectImage">Chọn ảnh</button>
                @Html.ValidationMessageFor(model => model.ImgMA, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Slug: </div>@Html.TextBoxFor(model => model.slug, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.slug, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="row my-padding-khung">
                <div class="my-a-infor">Tiêu đề: </div>@Html.TextBoxFor(model => model.title, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <div class="form-group">
            <div class="row my-padding-khung">
                <input type="submit" value="Chỉnh sửa" class="btn btn-sm btn-success my-button-width my-margin-left" />
                <a href="@Url.Action("",("CTMONAN"))" class="btn btn-sm btn-success my-button-width my-margin-left">Quay Lại</a>
            </div>
        </div>
    }

</div>
@section footjs{
    <script>
        $(document).ready(function () {
            $('#btnSelectImage').on('click', function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            })
        });
    </script>
}