@model MyClass.Model.LIENHE

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section headcss{
    <link href="~/Areas/Admin/Public/MyCSS/KhungHinhCSS.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Public/MyCSS/CangiuaCss.css" rel="stylesheet" />
}
<h2>Liên hệ</h2>
<div class="mypadding-admin">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chỉnh sửa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
                <div class="row my-padding-khung">
                <div class="my-a-infor">Tên khách hàng: </div>@Html.TextBoxFor(model => model.TenKH, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <div class="row my-padding-khung">
                <div class="my-a-infor">E-mail: </div>@Html.TextBoxFor(model => model.Email, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <div class="row my-padding-khung">
                <div class="my-a-infor">Chi tiết: </div>@Html.TextBoxFor(model => model.ChiTiet, new { @class = "form-control my-background boderText" })
                @Html.ValidationMessageFor(model => model.ChiTiet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <div class="row my-padding-khung">

                    <div class="my-a-infor">Status: </div>@Html.TextBoxFor(model => model.status, new { @class = "form-control my-background boderText" })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="row my-padding-khung">
                <input type="submit" value="Sửa" class="btn btn-sm btn-success my-button-width my-margin-left" />
                <a href="@Url.Action("",("LIENHE"))" class="btn btn-sm btn-success my-button-width my-margin-left">Quay Lại</a>
            </div>
        </div>
    </div>
    }
</div>
