@model LAgarden_CNPM.Models.LoginModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<head>
    @section head{
        <link href="~/Public/MyCSS/CangiuaCss.css" rel="stylesheet" />
    }
</head>


@using (Html.BeginForm("Login", "User", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="my-swapper">
        <div class="form-horizontal">
            <h4>Đăng nhập</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                <div class="row">
                    <div class="my-a-infor">Tài khoản: </div>@Html.TextBoxFor(model => model.UserName, new { @class = "form-control boderText" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger my-margin-left" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="my-a-infor">Mật khẩu: </div>@Html.PasswordFor(model => model.Password, new { @class = "form-control boderText" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger my-margin-left" })
                </div>
            </div>

            <div class="form-group">
                <div class="row" style="padding-left:30%">
                    <input type="submit" value="Đăng nhập" class="btn btn-default btn-sm btn-success" />
                    <a style="padding: 5px 20px 0px 20px">
                        <b>Hoặc</b>
                    </a>
                    <div class="btn btn-primary"><a class="my-a-btn" href="/dang-ky/">Đăng ký thành viên</a></div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function addClass() {
        let ele = document.getElementById('dangnhap');
        /* thêm class*/
        ele.classList.add('is-active');
    }
    addClass();
</script>