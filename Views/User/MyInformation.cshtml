@model LAgarden_CNPM.Models.InformationModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<head>
    @section head{
        <link href="~/Public/MyCSS/CangiuaCss.css" rel="stylesheet" />
    }
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="my-swapper">
    <div class="form-horizontal">
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }
        <h2>Thông tin tài khoản</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">

            <div class="row">
                <div class="my-a-infor">Tên tài khoản: </div>@Html.TextBoxFor(model => model.UserName, new { @class = "form-control boderText", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger my-margin-left" })
            </div>
        </div>
        <div class="form-group">

            <div class="row">
                <div class="my-a-infor">Họ và tên: </div>@Html.TextBoxFor(model => model.Name, new { @class = "form-control boderText" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger my-margin-left" })
            </div>
        </div>

        <div class="form-group">

            <div class="row">
                <div class="my-a-infor">Địa chỉ: </div>@Html.TextBoxFor(model => model.Address, new { @class = "form-control boderText" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger my-margin-left" })
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="my-a-infor">Email: </div>@Html.TextBoxFor(model => model.Email, new { @class = "form-control boderText" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger my-margin-left" })
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="my-a-infor">Điện thoại: </div>@Html.TextBoxFor(model => model.Phone, new { @class = "form-control boderText" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger my-margin-left" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                <div class="btn btn-primary"><a class="my-a-btn" href="/dat-mon/">Quay lại</a></div>
            </div>
        </div>
    </div>
</div>
    }

