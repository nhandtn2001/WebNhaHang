@model LAgarden_CNPM.Models.RegisterModel
    @using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<head>
    @section head{
        <link href="~/Public/MyCSS/CangiuaCss.css" rel="stylesheet" />
    }
</head>


<div class="content">
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="my-swapper">
            <div class="form-horizontal">
                <h4 style="text-align:center; font-size:30px; font-weight:bold; margin-top:20px">Đăng ký thành viên</h4>
                <hr />
                <div class="form-group">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="my-a-infor">Tên tài khoản (*): </div>@Html.TextBoxFor(model => model.UserName, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="my-a-infor">Mật khẩu (*): </div>@Html.PasswordFor(model => model.Password, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="my-a-infor">Nhập lại mật khẩu (*): </div>@Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="my-a-infor">Họ và tên (*): </div>@Html.TextBoxFor(model => model.Name, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="my-a-infor">Địa chỉ (*): </div>@Html.TextAreaFor(model => model.Address, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="my-a-infor">E-mail (*): </div>@Html.TextBoxFor(model => model.Email, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="my-a-infor">Số điện thoại (*): </div>@Html.TextBoxFor(model => model.Phone, new { @class = "form-control boderText" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger my-margin-left" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="control-label" style="margin:auto">
                            Vui lòng nhập Captcha (*): @Html.Captcha(5)
                            @if (ViewBag.errorCaptcha != null)
                            {
                                <div class="alert alert-danger">@ViewBag.errorCaptcha</div>
                            }
                            <p>(*): Thông tin bắt buộc phải nhập</p>
                        </div>
                        
                    </div>
                    </div>
                    <div class="form-group">
                        
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng ký" class="btn btn-sm btn-success" />
                            <a href="/dang-nhap/" class="btn btn-sm btn-success">Đăng nhập</a>
                        </div>
                    </div>

                </div>
            </div>
            }
        </div>

        <script>
            function addClass() {
                let ele = document.getElementById('dangky');
                /* thêm class*/
                ele.classList.add('is-active');
            }
            addClass();
        </script>
